<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_finanzas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1B2A"
    tools:context=".FinanzasActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarFinanzas"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#0D1B2A"
                app:title="Mis Carteras"
                app:titleTextColor="#FFFFFF" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFinanzas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Lista de carteras financieras"
                android:clipToPadding="false"
                android:paddingBottom="100dp" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnAgregarFinanza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="32dp"
            android:text="AGREGAR CARTERA"
            android:textColor="#FFFFFF"
            app:icon="@android:drawable/ic_input_add"
            app:iconTint="#FFFFFF"
            app:backgroundTint="#D00000"
            app:cornerRadius="28dp" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_finanzas"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#1B263B"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF" />

</androidx.drawerlayout.widget.DrawerLayout>