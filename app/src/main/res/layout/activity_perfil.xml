<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0D1B2A">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPerfil"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1B263B"
        app:title="Mis Datos"
        app:titleTextColor="#FFFFFF"
        app:navigationIcon="@android:drawable/ic_menu_revert" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivFotoPerfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            app:strokeColor="#00FF88"
            app:strokeWidth="2dp" />

        <EditText
            android:id="@+id/etNombreUsuarioPerfil"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="32dp"
            android:hint="Nombre de usuario"
            android:textColor="#FFFFFF"
            android:textColorHint="#88FFFFFF"
            android:backgroundTint="#FFFFFF" />

        <Button
            android:id="@+id/btnActualizarNombre"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:text="GUARDAR NOMBRE"
            android:backgroundTint="#2D6A4F" />

        <EditText
            android:id="@+id/etNuevaPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="32dp"
            android:hint="Nueva contraseña"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#88FFFFFF"
            android:backgroundTint="#FFFFFF" />

        <Button
            android:id="@+id/btnCambiarPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:text="CAMBIAR CONTRASEÑA"
            android:backgroundTint="#D00000" />

    </LinearLayout>
</LinearLayout>